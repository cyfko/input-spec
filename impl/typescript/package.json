{
  "name": "input-spec",
  "version": "1.0.0",
  "description": "Zero-dependency TypeScript implementation of the Dynamic Input Field Specification Protocol with framework integration support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "check-format": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "type-check": "tsc --noEmit",
    "examples:basic": "tsx examples/basic-validation.ts",
    "examples:dynamic": "tsx examples/dynamic-values.ts",
    "examples:complete": "tsx examples/complete-form.ts",
    "examples:demo": "tsx examples/demo.ts",
    "examples:all": "npm run examples:demo",
    "release": "npm run clean && npm run build && npm run test && npm run type-check"
  },
  "keywords": [
    "input-field",
    "validation",
    "form",
    "specification",
    "protocol",
    "typescript",
    "zero-dependencies",
    "angular",
    "react",
    "vue",
    "framework-agnostic",
    "field-validation",
    "dynamic-forms",
    "http-client",
    "constraint-validation"
  ],
  "author": {
    "name": "cyfko",
    "url": "https://github.com/cyfko"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyfko/input-spec.git",
    "directory": "impl/typescript"
  },
  "homepage": "https://github.com/cyfko/input-spec#readme",
  "bugs": {
    "url": "https://github.com/cyfko/input-spec/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "docs/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "tsup": "^7.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@angular/common": ">=12.0.0",
    "axios": ">=0.24.0"
  },
  "peerDependenciesMeta": {
    "@angular/common": {
      "optional": true
    },
    "axios": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@8.10.0"
}
